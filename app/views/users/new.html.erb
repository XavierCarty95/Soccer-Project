
<% if flash[:errors] %> 
 <% flash[:errors].each do |error| %> 
   <p style = 'color: red'> 
   <%= error %> 
   </p> 
  <%end%> 
<%end%>



<h1>Sign Up</h1>
<%= form_for @user ,  html: { class: "form" } do |f|%>
  <%= f.label :username%><br>
  <%= f.text_field :username%><br>
  <%= f.label :password %><br>
  <%= f.password_field :password %><br>
  <%= f.submit "create user", class: "button" %>
<%end%>