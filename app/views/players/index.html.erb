
<span class=" player waves-effect waves-light btn grey "><%= link_to "Add Player " , new_player_path %> </span>
    <span class="waves-effect waves-light btn grey center-align"><%= link_to "Sign Contract", new_contract_path , method: :get %> </span>
<div class="section">
      <div class="places-grid">
        <div class="row">
          <% @players.each do |player| %>
          <div class="col s4 l4 m4 places-holder">
            <div class="card hoverable">
              <div class="card-image circle responsive-img" width="50" height= "265.16px">
                <%= image_tag(player.image_url, :class => "circle responsive-img" ) %>
                <span class="picture responsive-img"></span>
              </div>
              <div class="card-content mar-bottom">
              <% if player.contracts.first == nil %>
               <span>  Contract Length: "Player has not signed a Contract" </span><br>
               
              <%end %>
            
               <% if player.contracts.first != nil %>
               <span> Names : <%=link_to player.name , player_path(player.id) %> </span> <br>
              <span>  Goals: <%= player.goals %> </span> <br> 
              <span>  Assists: <%= player.assists %> </span><br>
              <span>  Team Name: <%= player.teams.last.name %> </span><br>
              <span>  Contract Length: <%= pluralize(player.contracts.first.length ,  'years')%> </span><br>
              <%end%>
              <br>
              
              
                         
              <span class="waves-effect waves-light btn grey center-align"><%= button_to "Edit Player", edit_player_path(player.id), method: :get %></span>
               <span class="waves-effect waves-light btn grey center-align"><%= button_to "Delete", player_path(player.id) , method: :delete %> </span>
              </div>
             
            </div>
          </div>
          <% end %>
        </div>
      </div>
  </div>