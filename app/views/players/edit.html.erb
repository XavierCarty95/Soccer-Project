<% if flash[:errors] %> 
 <% flash[:errors].each do |error| %> 
   <p style = 'color: red'> 
   <%= error %> 
   </p> 
  <%end%> 
<%end%>



<h1> Edit Goals & Assist for: <span class = "changed"> <%= @player.name %></span> </h1>
<%= form_for @player, html: { class: "form" } do |f|%>
  <%= f.label :goals %><br>
  <%= f.number_field :goals %><br>
  <%= f.label :assists %><br>
  <%= f.number_field :assists %><br>
 
  <%= f.submit "Edit Player" , class: "waves-effect waves-light btn grey"  %>
<%end%>
